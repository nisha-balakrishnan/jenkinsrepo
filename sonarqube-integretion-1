pipeline {
    agent any

    tools {
        maven 'maven-3'
        jdk 'java-11'
    }

    environment {
        SONAR_PROJECT_KEY = 'nisha-balakrishnan_devops'
        SONAR_ORG = 'nisha-balakrishnan'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/hellokaton/java11-examples.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarCloud') {
                    sh """
                    mvn sonar:sonar \
                      -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                      -Dsonar.organization=${SONAR_ORG}
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
